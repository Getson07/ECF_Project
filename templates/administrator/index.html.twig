{% extends 'base.html.twig' %}

{% block title %}Administrator index{% endblock %}

{% block body %}
    <h1>Administrator index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Gender</th>
                <th>Firstname</th>
                <th>DateOfBirth</th>
                <th>Salary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for administrator in administrators %}
            <tr>
                <td>{{ administrator.id }}</td>
                <td>{{ administrator.email }}</td>
                <td>{{ administrator.roles ? administrator.roles|json_encode : '' }}</td>
                <td>{{ administrator.password }}</td>
                <td>{{ administrator.gender }}</td>
                <td>{{ administrator.firstname }}</td>
                <td>{{ administrator.dateOfBirth ? administrator.dateOfBirth|date('Y-m-d') : '' }}</td>
                <td>{{ administrator.salary }}</td>
                <td>
                    <a href="{{ path('app_administrator_show', {'id': administrator.id}) }}">show</a>
                    <a href="{{ path('app_administrator_edit', {'id': administrator.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_administrator_new') }}">Create new</a>
{% endblock %}
