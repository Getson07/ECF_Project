{% extends 'base.html.twig' %}

{% block title %}Formula
{% endblock %}

{% block body %}
	<h1>Formula</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ formula.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ formula.name }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ formula.description }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ formula.price }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_formula_index') }}" role="button" class="btn btn-success">back to list</a>

	<a href="{{ path('app_formula_edit', {'id': formula.id}) }}" role="button" class="btn btn-warning">edit</a>

	{{ include('formula/_delete_form.html.twig') }}
{% endblock %}
